<UserControl x:Class="QLSX.Module.Factory.Views.FactoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLSX.Module.Factory.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
            <Setter Property="HorizontalGridLinesBrush" Value="AliceBlue" />
            <Setter Property="VerticalGridLinesBrush" Value="AliceBlue" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        
        <Style TargetType="Button" x:Key="CustomButton1">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />

                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightBlue" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#00B087" />
            <Setter Property="BorderBrush" Value="#DDE4F0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Poppins"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="29"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>    
        
        <Style TargetType="Button" x:Key="CustomButton2">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />

                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightBlue" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#F99C30" />
            <Setter Property="BorderBrush" Value="#DDE4F0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Poppins"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="29"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>

        <!-- Custom Style for DatePicker -->
        <Style TargetType="DatePicker" x:Key="CustomDatePicker">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <!-- Outer Border -->
                            <Border Background="White" CornerRadius="5" BorderThickness="1" BorderBrush="#0078D7">
                                <Grid>
                                    <!-- TextBox for date input -->
                                    <DatePickerTextBox Name="PART_TextBox"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             Padding="5,0,45,0"
                                             FontSize="14" />
                                    <!-- Button with calendar icon -->
                                    <Button Name="PART_Button"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            HorizontalAlignment="Right"
                                            Width="30"
                                            Padding="2"
                                            Focusable="True"
                                            ClickMode="Press">
                                        <Image Source="pack://application:,,,/QLSX.Module.Factory;component/Resources/tear_off_calendar_icon48.png" Stretch="Uniform"/>
                                    </Button>
                                </Grid>
                            </Border>
                            <!-- Popup for Calendar -->
                            <Popup Name="PART_Popup" Placement="Bottom" StaysOpen="False">
                                <Border Background="White" BorderThickness="0" BorderBrush="#0078D7" CornerRadius="5">
                                    <Calendar Name="PART_Calendar" Background="#0078D7"/>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Border Margin="30,30,30,30" CornerRadius="10" BorderThickness="0" BorderBrush="Black" Background="#FFFFFF">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                
                <!-- DateTime Search -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <!-- Start Date -->
                    <TextBlock Grid.Column="1" Text="Start Date:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"
                               FontFamily="Poppins" FontSize="13"/>
                    <Border Grid.Column="2" BorderThickness="1" Width="180" Height="35" CornerRadius="5"
                            BorderBrush="#0078D7">
                        <DatePicker Height="35" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"
                                FontSize="14" BorderThickness="0"
                                SelectedDate="{Binding StartDate}">
                        </DatePicker>
                    </Border>

                    <!-- End Date -->
                    <TextBlock Text="End Date:" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <Border Grid.Column="4" BorderThickness="1" Width="180" Height="35" CornerRadius="5"
                            BorderBrush="#0078D7">
                        <DatePicker Height="35" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"
                                FontSize="14" BorderThickness="0"
                                SelectedDate="{Binding EndDate, StringFormat=dd/MM/yyyy}">
                        </DatePicker>
                    </Border>
                    
                    <!-- Button -->
                    <Button Grid.Column="5" Height="35"
                            Style="{StaticResource CustomButton1}" Background="#0078D7"
                            HorizontalAlignment="Right" Margin="20" Content="Tìm kiếm" Command="{Binding SubmitCommand}" />
                </Grid>
                <!-- Factory Table-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">

                        <DataGrid AutoGenerateColumns="False" 
                              ItemsSource="{Binding FactorySource}"
                              RowHeight="40"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single" Margin="10,0,10,0"
                              BorderThickness="0" RowHeaderWidth="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <DataGrid.Columns>
                                <!-- Column 1: ID -->
                                <DataGridTextColumn Header="ID"  Binding="{Binding ID}" MinWidth="40">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="5"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--Factory-->
                                <DataGridTextColumn Header="Xưởng" Binding="{Binding FactoryName}" MinWidth="100" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Left" />
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="20,5,5,5"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--1-->
                                <DataGridTemplateColumn Header="Đã sản xuất" MinWidth="100" MaxWidth="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding CompletedQuantity}"
                                                    Command="{Binding DataContext.SearchCompletedProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource CustomButton1}">
                                                
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Đang sản xuất" MinWidth="100" MaxWidth="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding CompletedQuantity}"
                                                    Command="{Binding DataContext.SearchInprogressProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource CustomButton2}">
                                                
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Setter Property="Foreground" Value="#B5B7C0"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="5,0,0,0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="LightBlue"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFFFFF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Height" Value="40"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FFFFFF"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="LightBlue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5,0,0,0"/>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>
                    </Grid>
                    
                </Grid>
                <Grid Grid.Row="2">
                    
                    <!--<Image Source="pack://application:,,,/QLSX.Module.Factory;component/Resources/tear_off_calendar_icon48.png" Stretch="Uniform"/>-->
                </Grid>


            </Grid>
        </Border>
    
    </Grid>
</UserControl>
