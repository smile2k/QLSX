<UserControl x:Class="QLSX.Module.Main.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLSX.Module.Main.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="LightBlue" 
                                BorderBrush="White" 
                                BorderThickness="0" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.5"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="abadi"/>
            <Setter Property="FontSize" Value="20"/>

        </Style>
        <Style TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
            <Setter Property="HorizontalGridLinesBrush" Value="AliceBlue" />
            <Setter Property="VerticalGridLinesBrush" Value="AliceBlue" />
            <Setter Property="Background" Value="LightBlue" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </UserControl.Resources>


    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Menu-->
        <Grid ShowGridLines="False" Background="#e9edf2">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="1" 
                               Source="/QLSX.Module.Main;component/Resources/icons_avatar_96.png">

            </Image>
            <!--<TextBlock Text="QLSX" Margin="45,0,0,0" Foreground="#515EC1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" FontFamily="Arial Rounded MT Bold"/>-->
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <Button Content="Dashboard" Style="{StaticResource MenuButtonStyle}" Width="180" Height="40"
                        Command="{Binding ShowDashboardTabCommand}">
                </Button>
                <Button Content="Products" Style="{StaticResource MenuButtonStyle}" Width="180" Height="40"
                        Command="{Binding ShowProductsTabCommand}">
                </Button>
                <Button Content="Factory" Style="{StaticResource MenuButtonStyle}" Width="180" Height="40"
                        Command="{Binding ShowFactoryTabCommand}">
                </Button>
                <Button Content="Step" Style="{StaticResource MenuButtonStyle}" Width="180" Height="40"
                        Command="{Binding ShowStepTabCommand}">
                </Button>
                <Button Content="Detail" Style="{StaticResource MenuButtonStyle}" Width="180" Height="40"
                        Command="{Binding ShowDetailTabCommand}">
                </Button>
            </StackPanel>

        </Grid>

        <!--Content-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Background="#e9edf2">
                <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Products" VerticalAlignment="Center"/>

            </Grid>
            <Grid Grid.Row="1" Background="Pink">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Center"/>
                    <TextBox HorizontalAlignment="Left" Height="30" Margin="56,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="114"/>
                    <TextBlock HorizontalAlignment="Left" Margin="192,0,0,0" TextWrapping="Wrap" Text="sku" VerticalAlignment="Center"/>
                    <TextBox HorizontalAlignment="Left" Height="30" Margin="224,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="119"/>
                    <Button Content="Search" HorizontalAlignment="Left" Height="30" Margin="362,0,0,0" VerticalAlignment="Center" Width="78" />
                    <Button Content="Create" HorizontalAlignment="Left" Height="30" Margin="523,0,0,0" VerticalAlignment="Center" Width="78"/>
                </Grid>
                <Grid Grid.Row="1">
                    <DataGrid AutoGenerateColumns="False" 
                              ItemsSource="{Binding Data}"
                              RowHeight="40"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single" Margin="10,0,10,0">
                        <DataGrid.Columns>
                            <!-- Column 1: ID -->
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*" />
                            
                            <!-- Column 2: Name -->
                            <DataGridTextColumn Header="Sku" Binding="{Binding Name}" Width="*" />
                            
                            <!-- Column 3: Age -->
                            <DataGridTextColumn Header="Name" Binding="{Binding Age}" Width="*" />
                            
                            <!-- Column 4: Action Buttons -->
                            <DataGridTemplateColumn Header="Actions" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <!-- Edit Button -->
                                            <Button Content="Edit" Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}" 
                                                    Style="{StaticResource MaterialDesignFlatButton}" 
                                                    Background="{DynamicResource MaterialDesignAccent}" 
                                                    Foreground="White" 
                                                    Margin="0,0,0,0"/>
                                            
                                            <!-- Delete Button -->
                                            <Button Content="Delete" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}" 
                                                    Style="{StaticResource MaterialDesignFlatButton}" 
                                                    Background="Red" 
                                                    Foreground="White" 
                                                    Margin="0,0,0,-5"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>     
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock HorizontalAlignment="Left" Margin="26,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Total: 200 produucts" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
